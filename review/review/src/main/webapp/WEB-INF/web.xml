<!DOCTYPE web-app PUBLIC
        "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
        "http://java.sun.com/dtd/web-app_2_3.dtd">

<web-app>
  <display-name>Review Submission Web App</display-name>

  <servlet>
    <servlet-name>SubmitReviewServlet</servlet-name>
    <servlet-class>servlets.SubmitReviewServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>SubmitReviewServlet</servlet-name>
    <url-pattern>/SubmitReviewServlet</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>DeleteReviewServlet</servlet-name>
    <servlet-class>servlets.DeleteReviewServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>DeleteReviewServlet</servlet-name>
    <url-pattern>/DeleteReviewServlet</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>RespondReviewServlet</servlet-name>
    <servlet-class>servlets.RespondReviewServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>RespondReviewServlet</servlet-name>
    <url-pattern>/RespondReviewServlet</url-pattern>
  </servlet-mapping>

</web-app>
